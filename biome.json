{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignore": ["node_modules", "dist", "coverage", ".git"],
    "include": ["**/*"],
    "maxSize": 1048576
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "lineWidth": 80,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "bracketSpacing": true,
    "attributePosition": "auto",
    "useEditorconfig": false
  },
  "assists": {
    "enabled": true
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "all": true,
      "a11y": {
        "all": true
      },
      "complexity": {
        "all": true
      },
      "correctness": {
        "all": true
      },
      "security": {
        "all": true
      },
      "performance": {
        "all": true
      },
      "style": {
        "all": true
      },
      "suspicious": {
        "all": true
      },
      "nursery": {
        "all": true
      }
    }
  },

  "javascript": {
    "assists": {
      "enabled": true
    },
    "formatter": {
      "enabled": true,
      "lineWidth": 80,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineEnding": "lf",
      "quoteStyle": "single",
      "jsxQuoteStyle": "single",
      "trailingCommas": "all",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "bracketSameLine": false,
      "semicolons": "always"
    },
    "linter": {
      "enabled": true
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": false
    },
    "jsxRuntime": "transparent",
    "globals": []
  },

  "json": {
    "assists": {
      "enabled": true
    },
    "formatter": {
      "enabled": true,
      "lineWidth": 80,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineEnding": "lf",
      "trailingCommas": "none"
    },
    "linter": {
      "enabled": true
    },
    "parser": {
      "allowComments": false,
      "allowTrailingCommas": false
    }
  },

  "css": {
    "assists": {
      "enabled": true
    },
    "formatter": {
      "enabled": true,
      "lineWidth": 80,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineEnding": "lf",
      "quoteStyle": "double"
    },
    "linter": {
      "enabled": true
    },
    "parser": {
      "allowWrongLineComments": false,
      "cssModules": false
    }
  },

  "graphql": {
    "formatter": {
      "enabled": true,
      "lineWidth": 80,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineEnding": "lf",
      "quoteStyle": "double",
      "bracketSpacing": true
    },
    "linter": {
      "enabled": true
    }
  },

  "overrides": []
}
