{
  "name": "@truenums/core",
  "version": "1.0.0",
  "description": "Type-safe, zero-cost TypeScript enums with advanced features like runtime validation, i18n, subsets, and composition. Built for Bun.",
  "keywords": [
    "typescript",
    "enum",
    "enums",
    "truenums",
    "type-guard",
    "runtime",
    "validation",
    "serialization"
  ],
  "author": "Ethan Wickstrom",
  "license": "MIT",
  "main": "./dist/core.js",
  "module": "./dist/core.js",
  "types": "./dist/core.d.ts",
  "exports": {
    ".": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.js",
      "require": "./dist/core.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "bun run clean && tsc -p tsconfig.json",
    "test": "bun test"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bun": "latest",
    "@types/jest": "latest",
    "typescript": "latest",
    "zod": "latest",
    "bun-types": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "trustedDependencies": ["@biomejs/biome"],
  "dependencies": {
    "semantic-release": "^24.2.1"
  }
}
